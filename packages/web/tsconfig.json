{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "types": ["vite/client"], 
    "paths": {
      "@jianzi/core": ["../core/src/index.ts"]
    },
    "ignoreDeprecations": "5.0"
  },
  "include": [
    "src/**/*",
    "../core/src/**/*"
  ]
}